package Bean;

import Dao.ProductDao;
import Dao.ProductDaoImpl;
import entity.Product;

public class AddProduct {

	private String name;
	private double price;
	private int qty;
	private long categoryId;
	
	private ProductDao productDao;
	
	public AddProduct()
	{
		productDao = new ProductDaoImpl();
	}

	public AddProduct(String name, double price, int qty, long categoryId) {
		super();
		this.name = name;
		this.price = price;
		this.qty = qty;
		this.categoryId = categoryId;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getPrice() {
		return price;
	}

	public void setPrice(double price) {
		this.price = price;
	}

	public int getQty() {
		return qty;
	}

	public void setQty(int qty) {
		this.qty = qty;
	}

	public long getCategoryId() {
		return categoryId;
	}

	public void setCategoryId(long categoryId) {
		this.categoryId = categoryId;
	}

	@Override
	public String toString() {
		return "AddProduct [name=" + name + ", price=" + price + ", qty=" + qty + ", categoryId=" + categoryId
				+ ", productDao=" + productDao + "]";
	}
	
	
	public String addNewProduct()
	{
		Product product = new Product(name,price,qty);
		
		return productDao.addProductByCategory(product,categoryId);
	}
	
}
